
<div class="home-header">
   
    {{#if search}}
    <h1>Você está pesquisando por: <span>{{search}}</span></h1>
        {{#if baptismsQty}}
            <p>Foram encontrados <span>{{baptismsQty}}</span> Indexes</p>
        {{else}}
            <p>Nenhum index foi encontrado para o termo: <span>{{search}}</span></p>
        {{/if}}
    {{else}}
        <h1>Todas as Indexações</h1>
    {{/if}}
    <form action="/indexings/baptisms/{{projectId}}/" method="GET">
        <input type="text" name="search" placeholder="Procurar Projeto...">
        <input type="submit" class="btn" value="Buscar">
    </form> 
    <div class="order-container">
        <span>Ordernar por:</span>
        <form action="/indexings/baptisms/{{projectId}}/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>

        <form action="/indexings/baptisms/{{projectId}}/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/indexings/baptisms/{{projectId}}">Limpar</a>
    </div>

    <div class="title-container">    
        <a href="/indexings/baptisms/add/{{projectId}}" class="btn">Adicionar Index</a>
    </div>

    </div>
    
    {{#if baptisms }}
    <div class="tables">
        
            <table border="1">
                <thead>
                    <tr class="title">
                        <td  width="10%">Nascimento</td>
                        <td width="10%">Nome</td>
                        <td width="10%">Pai</td>
                        <td width="10%">Mãe</td>
                        <td width="10%">Padrinhos</td>
                        <td width="10%">Observações</td>
                        <td width="20%"></td>
                    </tr>
                </thead>

                <tbody>   
                {{#each  baptisms}}
                    <tr>
                        <td>{{this.birthDate}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.father}}</td>
                        <td>{{this.mother}}</td>
                        <td>{{this.godparents}}</td>
                        <td>{{this.observacao}}</td>
                        <td>
                            <span class="table-actions">
                                <a href="/" class="btn">Editar</a>
                                <form action="/indexings/baptisms/remove" method="post">
                                    <input type="hidden" name="ProjectId" value="{{this.ProjectId}}">
                                    <input type="hidden" name="id" value="{{this.id}}">
                                    <input type="submit" value="Excluir" class="btn">
                                </form>
                            </span>
                        </td>

                    </tr>
                {{/each}}
                </tbody>
                    <tfoot>
                    </tfoot>
                </table>
    </div>
    {{else }}
        <div class="home-header">
         <h1>Ainda não há Registros Indexados!</span></h1>
        </div>
    {{/if}}



